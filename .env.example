# Spike-Transformer-Compiler Environment Configuration
# Copy this file to .env and configure your local environment

# ============================================================================
# Core Configuration
# ============================================================================

# Environment mode (development, testing, production)
SPIKE_COMPILER_ENV=development

# Logging configuration
SPIKE_COMPILER_LOG_LEVEL=INFO
SPIKE_COMPILER_LOG_FORMAT=structured
SPIKE_COMPILER_LOG_FILE=logs/compiler.log

# ============================================================================
# Hardware Configuration  
# ============================================================================

# Intel Loihi 3 SDK Configuration
LOIHI3_SDK_PATH=/opt/intel/loihi3-sdk
LOIHI3_BOARD_CONFIG=ncl-2chip
LOIHI3_NUM_CHIPS=2

# Hardware simulation settings
HARDWARE_SIMULATION_ENABLED=true
SIMULATION_BACKEND=software
SIMULATION_PRECISION=float32

# ============================================================================
# Compilation Settings
# ============================================================================

# Default optimization level (0-3)
DEFAULT_OPTIMIZATION_LEVEL=2

# Compilation cache settings
COMPILATION_CACHE_ENABLED=true
COMPILATION_CACHE_DIR=.cache/compilation
COMPILATION_CACHE_MAX_SIZE_GB=10

# Parallel compilation
COMPILATION_PARALLEL_JOBS=4
COMPILATION_TIMEOUT_SECONDS=300

# ============================================================================
# Model Configuration
# ============================================================================

# Default model settings
DEFAULT_TIME_STEPS=4
DEFAULT_SPIKE_ENCODING=rate
DEFAULT_THRESHOLD=1.0

# Pre-trained model repository
MODEL_REPO_URL=https://github.com/spikeformer/models
MODEL_CACHE_DIR=models/cache

# ============================================================================
# Profiling and Monitoring
# ============================================================================

# Energy profiling
ENERGY_PROFILING_ENABLED=true
ENERGY_MEASUREMENT_INTERVAL_MS=100

# Performance monitoring
PERFORMANCE_MONITORING_ENABLED=true
METRICS_COLLECTION_INTERVAL_MS=1000
METRICS_EXPORT_FORMAT=prometheus

# Telemetry settings (set to false to disable)
TELEMETRY_ENABLED=false
TELEMETRY_ENDPOINT=https://telemetry.spike-compiler.org
TELEMETRY_API_KEY=your_api_key_here

# ============================================================================
# Development Tools
# ============================================================================

# Debug settings
DEBUG_MODE=false
DEBUG_IR_DUMP=false
DEBUG_IR_DUMP_DIR=debug/ir_dumps
DEBUG_COMPILATION_TRACE=false

# Testing configuration  
TEST_HARDWARE_AVAILABLE=false
TEST_LOIHI3_BOARDS=0
TEST_TIMEOUT_SECONDS=30
TEST_PARALLEL_EXECUTION=true

# Code quality tools
LINT_ON_SAVE=true
FORMAT_ON_SAVE=true
TYPE_CHECK_ON_SAVE=true

# ============================================================================
# Security and Privacy
# ============================================================================

# Model encryption (for proprietary models)
MODEL_ENCRYPTION_ENABLED=false
MODEL_ENCRYPTION_KEY_FILE=keys/model.key

# API security
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ============================================================================
# External Integrations
# ============================================================================

# GitHub integration
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=danieleschmidt/spike-transformer-compiler

# Container registry
CONTAINER_REGISTRY=ghcr.io
CONTAINER_NAMESPACE=danieleschmidt

# Cloud storage (for model artifacts)
CLOUD_STORAGE_PROVIDER=none
CLOUD_STORAGE_BUCKET=spike-compiler-artifacts
CLOUD_STORAGE_ACCESS_KEY=your_access_key
CLOUD_STORAGE_SECRET_KEY=your_secret_key

# ============================================================================
# Advanced Configuration
# ============================================================================

# Memory management
MAX_MEMORY_USAGE_GB=8
MEMORY_POOL_SIZE_MB=1024
GARBAGE_COLLECTION_THRESHOLD=0.8

# Networking
NETWORK_TIMEOUT_SECONDS=30
RETRY_ATTEMPTS=3
RETRY_BACKOFF_SECONDS=2

# Plugin system
PLUGIN_DIRECTORY=plugins
PLUGIN_AUTO_DISCOVERY=true
PLUGIN_SECURITY_CHECK=true

# ============================================================================
# Platform-specific Settings
# ============================================================================

# Linux-specific
LINUX_USE_SYSTEMD=false
LINUX_PROCESS_PRIORITY=0

# macOS-specific  
MACOS_METAL_ENABLED=false

# Windows-specific
WINDOWS_WSL_ENABLED=false

# ============================================================================
# Experimental Features
# ============================================================================

# Enable experimental optimizations (may be unstable)
EXPERIMENTAL_OPTIMIZATIONS=false
EXPERIMENTAL_TEMPORAL_FUSION=false
EXPERIMENTAL_SPIKE_COMPRESSION=false
EXPERIMENTAL_HARDWARE_CODESIGN=false

# Research mode (enables additional debugging and analysis)
RESEARCH_MODE=false
RESEARCH_DATA_COLLECTION=false
RESEARCH_ANONYMIZE_DATA=true

# ============================================================================
# Notes
# ============================================================================
# 
# 1. Required variables:
#    - LOIHI3_SDK_PATH (if using hardware)
#    - SPIKE_COMPILER_ENV
#
# 2. Optional but recommended:
#    - COMPILATION_CACHE_ENABLED for faster builds
#    - ENERGY_PROFILING_ENABLED for optimization
#    - DEBUG_MODE during development
#
# 3. Security considerations:
#    - Never commit .env files with real credentials
#    - Use environment-specific .env files
#    - Rotate API keys regularly
#
# 4. Performance tuning:
#    - Adjust COMPILATION_PARALLEL_JOBS based on CPU cores
#    - Increase MAX_MEMORY_USAGE_GB for large models
#    - Enable compilation cache for development
#