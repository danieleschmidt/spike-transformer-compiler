{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Debug: spike-compile CLI",
            "type": "python",
            "request": "launch",
            "module": "spike_transformer_compiler.cli",
            "args": [
                "compile",
                "tests/fixtures/sample_model.pth",
                "--target",
                "simulation",
                "--verbose"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Debug: Compiler Unit Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/test_compiler.py",
                "-v"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Debug: Integration Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/integration/",
                "-v",
                "-m",
                "not hardware"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Debug: Performance Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/performance/",
                "-v",
                "-m",
                "performance"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Profile: Compilation Performance",
            "type": "python",
            "request": "launch",
            "module": "cProfile",
            "args": [
                "-o",
                "profile_output.prof",
                "-m",
                "spike_transformer_compiler.cli",
                "compile",
                "tests/fixtures/large_model.pth"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Attach to Remote Docker",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ]
        }
    ]
}